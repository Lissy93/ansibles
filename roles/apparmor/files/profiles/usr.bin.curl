#include <tunables/global>

/usr/bin/curl {
  # basic FS + libraries
  #include <abstractions/base>

  # open TCP/UDP streams
  network inet stream,
  network inet dgram,
  network inet6 stream,
  network inet6 dgram,

  # TLS roots
  /etc/ssl/certs/** r,
  /usr/lib/** r,

  # the binary
  /usr/bin/curl mr,
}
