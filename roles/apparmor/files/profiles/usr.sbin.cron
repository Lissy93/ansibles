#include <tunables/global>

/usr/sbin/cron {
  # basic filesystem + libraries
  #include <abstractions/base>
  # look up DNS (for jobs that fetch URLs, etc)
  #include <abstractions/nameservice>

  # read crontabs
  /etc/crontab r,
  /etc/cron.*/* r,
  /var/spool/cron/crontabs/* r,

  # run jobs (shell, env, any execables)
  /bin/sh ix,
  /usr/bin/env ix,
  /usr/bin/* ix,

  # log files
  /var/log/cron.log w,

  # run the daemon
  /usr/sbin/cron mr,
}
